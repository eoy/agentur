<div class="full-width-row">
  <div class="medium-12 columns model-form">
    <%= simple_form_for @person do |f| %>
      <%= f.input :name %>
      <%= f.input :age %>
      <%= f.input :weight %>
      <%= f.input :description %>
      <%= f.input :phone %>
      <%= f.input :email %>
      <%= f.submit "Send application" %>
    <% end %>
  </div>
</div>